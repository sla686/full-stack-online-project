{
  "name": "full-stack-online-shop",
  "version": "1.0.0",
  "description": "An online shop project",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
  },
  "author": "Viacheslav Semushin",
  "license": "MIT",
  "scripts": {
    "start:prod": "node dist/server.js",
    "start:dev": "nodemon --exec npx ts-node ./src/server.ts",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose false",
    "watch-test": "npm run test -- --watchAll",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lusca": "^1.7.0",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.1",
    "errorhandler": "^1.5.1",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "formidable": "^2.0.1",
    "husky": "^8.0.1",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "lusca": "^1.7.0",
    "mongodb-memory-server": "^8.8.0",
    "mongoose": "^6.5.2",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/errorhandler": "^1.5.0",
    "@types/eslint": "^8.4.5",
    "@types/express": "^4.17.13",
    "@types/formidable": "^2.0.5",
    "@types/jest": "^28.1.7",
    "@types/lodash": "^4.14.183",
    "@types/mongoose-unique-validator": "^1.0.6",
    "@types/node": "^18.7.6",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.4.0",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "mongoose-unique-validator": "^3.1.0",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
